# TrendPulse - Environment Configuration
# =======================================
# Copy this file to .env and fill in your credentials

# =================================
# Application Settings
# =================================
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Data collection interval (seconds)
COLLECTION_INTERVAL_SECONDS=30
BROADCAST_INTERVAL_SECONDS=5

# =================================
# Reddit API
# Get credentials at: https://www.reddit.com/prefs/apps
# =================================
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USERNAME=your_username
REDDIT_PASSWORD=your_password

# Comma-separated list of subreddits to monitor
# REDDIT_SUBREDDITS=wallstreetbets,cryptocurrency,stocks,pennystocks

# =================================
# Twitter/X API
# Get credentials at: https://developer.twitter.com/en/portal/dashboard
# =================================
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# =================================
# Telegram API
# Get credentials at: https://my.telegram.org/apps
# =================================
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE_NUMBER=+1234567890

# Comma-separated list of channels/groups to monitor
# TELEGRAM_CHANNELS=@cryptosignals,@wallstreetbets

# =================================
# Discord API
# Get credentials at: https://discord.com/developers/applications
# =================================
DISCORD_BOT_TOKEN=your_bot_token

# =================================
# StockTwits API
# Get credentials at: https://api.stocktwits.com/developers
# =================================
STOCKTWITS_ACCESS_TOKEN=your_access_token

# =================================
# LunarCrush API
# Get credentials at: https://lunarcrush.com/developers
# =================================
LUNARCRUSH_API_KEY=your_api_key

# =================================
# Santiment API
# Get credentials at: https://api.santiment.net/
# =================================
SANTIMENT_API_KEY=your_api_key

# =================================
# Glassnode API
# Get credentials at: https://docs.glassnode.com/
# =================================
GLASSNODE_API_KEY=your_api_key

# =================================
# CoinMarketCap API
# Get credentials at: https://coinmarketcap.com/api/
# =================================
COINMARKETCAP_API_KEY=your_api_key

# =================================
# DEXTools API
# Get credentials at: https://developer.dextools.io/
# =================================
DEXTOOLS_API_KEY=your_api_key

# =================================
# Polymarket
# =================================
POLYMARKET_WALLET_ADDRESS=your_wallet_address

# =================================
# Kalshi API
# Get credentials at: https://trading-api.readme.io/
# =================================
KALSHI_API_KEY=your_api_key
KALSHI_API_SECRET=your_api_secret

# =================================
# News APIs
# =================================
NEWSAPI_KEY=your_api_key
CRYPTOPANIC_API_KEY=your_api_key

# =================================
# TikTok API (Research API)
# Get credentials at: https://developers.tiktok.com/
# =================================
TIKTOK_API_KEY=your_api_key

# =================================
# YouTube API
# Get credentials at: https://console.cloud.google.com/apis
# =================================
YOUTUBE_API_KEY=your_api_key

# =================================
# Trading APIs - Stocks
# =================================

# Alpaca (https://alpaca.markets/docs/)
ALPACA_API_KEY=your_api_key
ALPACA_SECRET_KEY=your_secret_key
ALPACA_PAPER_TRADING=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Interactive Brokers
INTERACTIVE_BROKERS_ACCOUNT_ID=your_account_id
INTERACTIVE_BROKERS_API_KEY=your_api_key

# =================================
# Trading APIs - Crypto
# =================================

# Coinbase (https://docs.cloud.coinbase.com/)
COINBASE_API_KEY=your_api_key
COINBASE_API_SECRET=your_api_secret

# Binance (https://binance-docs.github.io/apidocs/)
BINANCE_API_KEY=your_api_key
BINANCE_API_SECRET=your_api_secret

# Kraken (https://docs.kraken.com/)
KRAKEN_API_KEY=your_api_key
KRAKEN_PRIVATE_KEY=your_private_key

# =================================
# Database (Optional)
# =================================
DATABASE_URL=postgresql://user:password@localhost:5432/trendpulse
REDIS_URL=redis://localhost:6379

# =================================
# Alert Thresholds
# =================================
ALERT_MOMENTUM_THRESHOLD=70.0
ALERT_SENTIMENT_THRESHOLD=0.3
ALERT_VOLUME_SPIKE_THRESHOLD=200.0
